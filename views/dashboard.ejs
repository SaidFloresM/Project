<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Sistema de Vales</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/dashboard">
                <img src="/images/logo.png" alt="Logo" height="40" class="me-2">
                <span>Sistema de Vales</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/vales">Vales</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/nominas">Nóminas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/custodios">Custodios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ordenes">Órdenes de Taller</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/auth/logout">
                            <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row g-4">
            <!-- Vales -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="h5 mb-0">Vales</h3>
                            <i class="fas fa-file-invoice fa-2x text-primary"></i>
                        </div>
                        <p class="card-text text-muted">Gestiona los vales de custodia</p>
                        <a href="/vales" class="btn btn-primary w-100">
                            <i class="fas fa-arrow-right me-2"></i>Ver Vales
                        </a>
                    </div>
                </div>
            </div>

            <!-- Nóminas -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="h5 mb-0">Nóminas</h3>
                            <i class="fas fa-money-check-alt fa-2x text-success"></i>
                        </div>
                        <p class="card-text text-muted">Administra las nóminas de custodios</p>
                        <a href="/nominas" class="btn btn-success w-100">
                            <i class="fas fa-arrow-right me-2"></i>Ver Nóminas
                        </a>
                    </div>
                </div>
            </div>

            <!-- Custodios -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="h5 mb-0">Custodios</h3>
                            <i class="fas fa-users fa-2x text-info"></i>
                        </div>
                        <p class="card-text text-muted">Gestiona la información de custodios</p>
                        <a href="/custodios" class="btn btn-info w-100 text-white">
                            <i class="fas fa-arrow-right me-2"></i>Ver Custodios
                        </a>
                    </div>
                </div>
            </div>

            <!-- Órdenes de Taller -->
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="h5 mb-0">Órdenes de Taller</h3>
                            <i class="fas fa-tools fa-2x text-warning"></i>
                        </div>
                        <p class="card-text text-muted">Gestiona las órdenes de servicio</p>
                        <a href="/ordenes" class="btn btn-warning w-100 text-white">
                            <i class="fas fa-arrow-right me-2"></i>Ver Órdenes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-4 mt-auto">
        <div class="container text-center">
            <p class="text-muted mb-0">Sistema de Gestión de Vales Digitales © 2024</p>
        </div>
    </footer>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>